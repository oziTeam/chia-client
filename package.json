{
  "name": "chia-client-with-configs",
  "version": "1.1.0",
  "description": "TypeScript client for Chia node peer RPC interface",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --runInBand test/",
    "prepare": "rm -rf dist && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oziTeam/chia-client.git"
  },
  "keywords": [
    "chia",
    "cryptocurrency"
  ],
  "author": "OziTeam (edit from Freddie Coleman)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.23",
    "@types/yaml": "^1.9.7",
    "jest": "^26.0.1",
    "nock": "^12.0.3",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "yaml": "2.0.0-5",
    "chia-utils": "^1.0.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "restoreMocks": true,
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "isolatedModules": true
      }
    }
  },
  "bugs": {
    "url": "https://github.com/oziTeam/chia-client/issues"
  },
  "homepage": "https://github.com/oziTeam/chia-client#readme",
  "directories": {
    "test": "test"
  }
}
